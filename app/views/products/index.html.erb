<h1>Listing products</h1>

<table class="table table-condesed table-striped">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.photo.url(:thumb) %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product,  class: "btn btn-default"  %>
        <%= link_to 'Edit', edit_product_path(product),  class: "btn btn-primary"  %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path,  class: "btn btn-primary" %>
